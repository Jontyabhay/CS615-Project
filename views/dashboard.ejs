<h1 class="mt-4">Dashboard</h1>

<% var expID %>

<div class="container bg-light text-dark">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% table.forEach(function(entry){ %>
        <tr>
            <td><%- entry.title %></td>
            <td><%- entry.description %></td>
            <% expID = entry.id %>
            <td><button id="attempt" type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal" data-expID="<%= expID %>" >Attempt Experiment <%= entry.id  %></button></td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p> Do you want to proceed with the experiment? <br /> Caution: Each experiment can be attempted only once.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= console.log(expID);  %>
          <button id="confirm" type="button" class="btn btn-primary" data-value="<%= expID  %>" target="_top" onclick="window.location = 'experiments/<%= expID  %>' ">Confirm</button>
        </div>
      </div>
    </div>
</div>

<a href="/users/logout" class="btn btn-secondary">Logout</a>
